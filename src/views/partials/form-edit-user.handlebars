<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3 class="text-center">Edit User Information</h3>
            <form>
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{default.name}}">
                </div>
                <div class="mb-3">
                    <label for="photo" class="form-label">Photo URL</label>
                    <input type="text" class="form-control" id="photo" name="photo" value="{{default.photo}}">
                </div>

                {{#if isAdmin}}
                <div class="mb-3">
                    <label for="role" class="form-label">Role</label>
                    <select class="form-select" id="role" name="role">
                        <option value="0" {{#ifEquals default.role 0}} selected{{/ifEquals}}>User</option>
                        <option value="1" {{#ifEquals default.role 1}} selected{{/ifEquals}}>Admin</option>
                        <option value="2" {{#ifEquals default.role 2}} selected{{/ifEquals}}>Premium User</option>
                    </select>
                </div>
                {{/if}}

                <small class="text-muted mb-2" id="userId">{{default._id}}</small>
            </form>

            <div class="text-center mt-2">
                <button onclick="submitEditUser()" class="btn btn-primary">Save User</button>
                <button onclick="deleteUser('{{default._id}}')" class="btn btn-danger" id="delete-user">Delete User</button>
            </div>
        </div>
    </div>
</div>
<script src="/scripts/editUserForm.js"></script>