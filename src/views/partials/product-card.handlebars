<div class='card' style='width: 20vw; height 40vh; margin: 2vh;'>
  <div class='card-body d-flex flex-column justify-content-between'>
    <img src="{{this.photo}}" class='card-img-top' alt='...' />
    <div>
      <h5 class='card-title'>
        {{this.title}}
      </h5>
      <p class='card-text'>
        Price: {{this.price}}
        <br />
        Stock: {{this.stock}}
      </p>
      <div class="d-flex flex-row">
        <a href="/products/{{this._id}}" class='btn btn-primary me-2'> Details </a>
        {{> button-add-to-cart product=this}}
      </div>
    </div>
  </div>
</div>
