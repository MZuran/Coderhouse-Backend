<h1>
  PRODUCTOS
</h1>
<div
  class='d-flex flex-row flex-wrap justify-content-center'
  style='width: 100%;'
>
  {{#each products}}
    <div class='card' style='width: 20vw; height 40vh; margin: 2vh;'>
      <div class='card-body d-flex flex-column justify-content-between'>
        <img src="{{this.photo}}" class='card-img-top' alt='...' />
        <div>
          <h5 class='card-title'> {{this.title}} </h5>
          <p class='card-text'> Price: {{this.price}} <br /> Stock: {{this.stock}} </p>
          <a href="/products/{{this.id}}" class='btn btn-primary'> Details </a>
          <a href="#" class='btn btn-success'> Add to cart <i class="bi bi-basket2-fill"></i> </a>
        </div>
      </div>
    </div>
  {{/each}}
</div>