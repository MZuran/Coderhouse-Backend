<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="d-flex justify-content-center">
                    <img src="{{product.photo}}" class="card-img-top" alt="{{product.title}}" style="max-width: 40vh; height: auto;">
                </div>
                <div class="card-body">
                    <h2 class="card-title text-center">{{product.title}}</h2>
                    <p class="card-text"><strong>Price:</strong> ${{product.price}}</p>
                    <p class="card-text"><strong>Stock:</strong> {{product.stock}} units available</p>
                    <p class="card-text"><strong>Category:</strong> {{product.category}}</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="d-flex justify-content-center align-self-center">
    <div class="m-2">
        {{> button-add-to-cart product=product}}
    </div>
    <div class="m-2">
        {{> button-manage-product product=product}}
    </div>
</div>
