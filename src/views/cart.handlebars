<h1> CART </h1>
<h2>Carrito de {{cart.0.user_id.name}}</h2>
<div class='d-flex flex-row flex-wrap justify-content-center' style='width: 100%;'>
    {{!-- {{log cart}} --}}
    
    {{#each cart}}
    <div class='card' style='width: 20vw; height 40vh; margin: 2vh;'>
        <div class='card-body d-flex flex-column justify-content-between'>
            <img src="{{this.product_id.photo}}" class='card-img-top' alt='...' />
            <div>
                <h5 class='card-title'> {{this.product_id.title}} </h5>
                <p class='card-text'> Amount: {{this.quantity}}</p>

                <label>Quantity:</label>
                <input id="numericInput{{this._id}}" style="margin: 0.5rem;" type="number" name="numericInput" min="0" max="100" step="1">

                <div>
                <a style="margin: 0.2rem;" class='btn btn-primary' onclick="addQuantity('{{this._id}}', document.getElementById('numericInput{{this._id}}').value)"> Add</a>
                <a style="margin: 0.2rem;" href="#" class='btn btn-danger' onclick="deleteCart('{{this._id}}')"> Remove <i class="bi bi-trash3"></i> </a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
<script src="/scripts/cart.js"></script>