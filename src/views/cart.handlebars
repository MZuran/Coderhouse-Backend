<h1>
    CART
</h1>
<div class='d-flex flex-row flex-wrap justify-content-center' style='width: 100%;'>
    {{log cart}}
    {{#each cart}}
    <div class='card' style='width: 20vw; height 40vh; margin: 2vh;'>
        <div class='card-body d-flex flex-column justify-content-between'>
            <img src="{{this.photo}}" class='card-img-top' alt='...' />
            <div>
                <h5 class='card-title'> {{this.title}} </h5>
                <p class='card-text'> Amount:</p>
                <div class="input-group mb-3">
                    <input type="number" class="form-control" id="numberInput" min="0" step="1">
                </div>
                <a href="/products/{{this.id}}" class='btn btn-primary'> Add </a>
                <a href="#" class='btn btn-danger'> Remove <i class="bi bi-trash3"></i> </a>
            </div>
        </div>
    </div>
    {{/each}}
</div>