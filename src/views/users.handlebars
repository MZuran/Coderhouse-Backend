<div class="container">
    <div class="row">
        <div class="col">
            <h1>Users</h1>
            {{#each users}}
            <div class="card mb-3">
                <img src="{{this.photo}}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <a href="mailto:{{this.email}}">{{this.email}}</a>
                    <p class="card-text"><small class="text-muted">{{this.role}}</small></p>
                </div>
            </div>
            {{/each}}
        </div>
        <div class="col">
            <h2>Join us</h2>
            <form>
                <div class="form-group">
                    <label for="email">Email address</label>
                    <input type="email" class="form-control" id="email" aria-describedby="emailHelp"
                        placeholder="Enter email">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                        else.</small>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" placeholder="Password">
                </div>
                <div class="form-group">
                    <label for="photo">Photo</label>
                    <input type="text" class="form-control" id="photo" placeholder="photo">
                </div>
                <div class="form-group">
                    <label for="role">Role</label>
                    <input type="text" class="form-control" id="role" placeholder="role">
                </div>
                <br>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>